# Oh My Zsh
export ZSH=$HOME/.oh-my-zsh
ZSH_THEME="simple"
plugins=(git)

# User configuration
export PATH="$HOME/.composer/vendor/bin:$HOME/opt/node/bin:$HOME/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games"

source $ZSH/oh-my-zsh.sh

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='vim'
fi

# Java
export JAVA_HOME="$HOME/opt/java/bin/java"
export PATH="$HOME/opt/java/bin:$PATH"

SCM=$HOME/scm
export DOTFILES=$SCM/identor/dotfiles
export ENV=$HOME/.env

# Aliases
# Config: cfg
alias cfgzsh="vim $DOTFILES/zsh/zshrc && $DOTFILES/zsh/install.sh && source $HOME/.zshrc"
alias cfgvim="vim $DOTFILES/vim/vimrc && $DOTFILES/vim/install.sh"
alias cfgswrx="vim $SCM/mclinica/swiperx/cli/app/config.js"
alias cfgx11="vim $DOTFILES/x11/xresources && $DOTFILES/x11/install.sh && xrdb -merge ~/.Xresources"
alias cpd='echo -en `pwd`/ | xclip -selection clipboard'

# Git alias
alias Gstatus="git status"
alias Gpull="git pull"
alias Gpush="git push"
alias Gcommit="git commit"

## Current projects: cproj
DWEB=$SCM/danisonbuilders/www
SWRX=$SCM/mclinica/swiperx
EULR=$SCM/identor/project-euler

export SWRX_ENV=$SWRX/env/swrx

alias cprojdweb="$DWEB; cd $DWEB; tmux -2 new -s $DWEB || tmux -2 a -t $DWEB"
alias cprojswrx="$SWRX; cd $SWRX; tmux -2 new -s $SWRX || tmux -2 a -t $SWRX"
alias cprojeulr="$EULR; cd $EULR; tmux -2 new -s $EULR || tmux -2 a -t $EULR"

# Dotenv
alias de="dotenv -e"

# Supported variables
# $DB_DEFAULT - default database
# $DB_PASSWORD - password
# $DB_HOST - hostname
# $DB_USER - username
function mysqlenv () {
    env=$1
    shift

    # Don't expose variables exported via `export` call
    (
        export $(cat $env | xargs) &&
        mysql -u$DB_USER -p$DB_PASSWORD -h$DB_HOST $DB_DEFAULT $@
    )
}

# Mysql
alias mysqlswrxcore="mysqlenv $ENV/swrx/core/production"
alias mysqlswrxcorestg="mysqlenv $ENV/swrx/core/staging "
alias mysqlswrxmodule="mysqlenv $ENV/swrx/module/production "
alias mysqlswrxmodulestg="mysqlenv $ENV/swrx/module/staging "
alias swiperxstg="mysqlenv $SWRX_ENV/cli/staging swiperx"
alias swiperxlocal="mysqlenv $SWRX_ENV/cli/local swiperx"

alias notes="vim +cd $SCM/identor/notes"

# Use python 3
alias python=python3
alias pip=pip3

# bypass zsh glob pattern
unsetopt nomatch

source ~/.profile

### Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"

### Add ~/bin to PATH
export PATH="$HOME/bin:$HOME/.local/bin:$PATH"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Merge ~/.Xresources
xrdb -merge ~/.Xresources

