[diff]
	tool = vimdiff
[difftool]
	prompt = 0
[alias]
	co = checkout
	unstage = reset HEAD --
	ci = commit
	st = status
	dc = checkout --
[diff]
	tool = nvr
[difftool "nvr"]
	cmd = nvr -s -d $LOCAL $REMOTE
[merge]
	tool = nvr
[mergetool "nvr"]
	cmd = nvr -s -d $LOCAL $BASE $REMOTE $MERGED -c 'wincmd J | wincmd ='
[pull]
	ff = only
[init]
	defaultBranch = master
